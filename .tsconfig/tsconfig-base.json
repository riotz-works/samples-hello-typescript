{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "outDir": "../target/dist",
        "removeComments": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "newLine": "LF",
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "esnext"
        ]
    },
    "include": [ "../src/**/*.ts" ]
}
